rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 允许所有操作（仅用于开发/测试环境）
    // ⚠️ 生产环境请设置更严格的规则
    match /{document=**} {
      allow read, write: if true;
    }

    // 更安全的规则示例（生产环境推荐）：
    /*
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'your-admin-uid';
    }

    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'your-admin-uid';
    }
    */
  }
}